@model ShopCartViewModel

<div class="container">
    @foreach (var elem in Model.ShopCart.ListShopItems)
    {
    <div class="alert alert-warning mt-3">
        <img class="img-thumbnail" src="@elem.car.img" alt="Name" title="@elem.car.name" style="cursor: pointer" /><br />
        <b>Car: </b> @elem.car.name <br />
        <b>Price: </b> @elem.car.price.ToString("c")
    </div> 
    }
    <hr/>
    <a class="btn btn-danger mb-5" asp-controller="Order" asp-action="Checkout">Pay</a>
</div>
