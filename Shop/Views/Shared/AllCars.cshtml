@model Car


<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.img" alt="Name" title="@Model.name" style="cursor: pointer" />
    <h2>Model: @Model.name</h2>
    <p>@Model.shortDesc</p>
    <p>Price: @Model.price.ToString("c")</p>
    <p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="AddToCart" asp-route-id="@Model.id">Add to Shopping Cart</a></p>
</div>